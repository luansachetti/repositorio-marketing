{
  "version": 2,
  "builds": [
    {
      "src": "repositorio-frontend-react/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    },
    {
      "src": "repositorio-backend/src/server.ts", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/repositorio-frontend-react/dist/assets/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/repositorio-backend/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/repositorio-frontend-react/dist/index.html"
    }
  ]
}