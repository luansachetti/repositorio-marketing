{
  "version": 2,
  "builds": [
    {
      "src": "repositorio-frontend-react/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://managerial-toby-luansachetti-dev-7bdd9ad3.koyeb.app/api/public/$1" 
    },
    
    {
      "source": "/menu", 
      "destination": "/index.html"
    },
    
    {
      "source": "/:path((?!api).*)", 
      "destination": "/index.html"
    }
  ]
}